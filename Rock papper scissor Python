import random
import tkinter as tk
from tkinter import messagebox



def get_computer_choice():
    return random.choice(["rock", "paper", "scissors"])

def determine_winner(user, computer):
    if user == computer:
        return "tie"
    elif (user == "rock" and computer == "scissors") or \
         (user == "scissors" and computer == "paper") or \
         (user == "paper" and computer == "rock"):
        return "user"
    else:
        return "computer"


class RPSGame:
    def __init__(self, root):
        self.root = root
        self.root.title("Rock Paper Scissors")
        self.root.geometry("400x450")
        
        self.user_score = 0
        self.computer_score = 0

        
        self.score_label = tk.Label(root, text="User: 0  |  Computer: 0", font=("Arial", 14, "bold"))
        self.score_label.pack(pady=20)

       
        self.result_label = tk.Label(root, text="Make your move!", font=("Arial", 12), fg="blue")
        self.result_label.pack(pady=10)

        self.choice_details = tk.Label(root, text="", font=("Arial", 10, "italic"))
        self.choice_details.pack(pady=5)

        
        btn_frame = tk.Frame(root)
        btn_frame.pack(pady=30)

        
        tk.Button(btn_frame, text="ü™® Rock", width=10, height=2, command=lambda: self.play("rock")).grid(row=0, column=0, padx=5)
        tk.Button(btn_frame, text="üìÑ Paper", width=10, height=2, command=lambda: self.play("paper")).grid(row=0, column=1, padx=5)
        tk.Button(btn_frame, text="‚úÇÔ∏è Scissors", width=10, height=2, command=lambda: self.play("scissors")).grid(row=0, column=2, padx=5)

        tk.Button(root, text="Reset Game", command=self.reset_scores).pack(pady=20)

    def play(self, user_choice):
        computer_choice = get_computer_choice()
        result = determine_winner(user_choice, computer_choice)

        if result == "user":
            self.user_score += 1
            msg = "You Win! üéâ"
            color = "green"
        elif result == "computer":
            self.computer_score += 1
            msg = "Computer Wins! ü§ñ"
            color = "red"
        else:
            msg = "It's a Tie! ü§ù"
            color = "gray"

        self.result_label.config(text=msg, fg=color)
        self.choice_details.config(text=f"You: {user_choice.capitalize()} | Computer: {computer_choice.capitalize()}")
        self.score_label.config(text=f"User: {self.user_score}  |  Computer: {self.computer_score}")

    def reset_scores(self):
        self.user_score = 0
        self.computer_score = 0
        self.score_label.config(text="User: 0  |  Computer: 0")
        self.result_label.config(text="Game Reset!", fg="blue")
        self.choice_details.config(text="")

if __name__ == "__main__":
    root = tk.Tk()
    game = RPSGame(root)
    root.mainloop()
