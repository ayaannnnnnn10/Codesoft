import random
import string
import tkinter as tk
from tkinter import messagebox

def generate_password(length, use_digits, use_symbols):
    characters = string.ascii_letters
    if use_digits:
        characters += string.digits
    if use_symbols:
        characters += string.punctuation
    
    return ''.join(random.choice(characters) for _ in range(length))

class PasswordApp:
    def __init__(self, root):
        self.root = root
        self.root.title("PassGen")
        self.root.geometry("350x300")

        # --- UI Elements ---
        tk.Label(root, text="Password Length:", font=("Arial", 10)).pack(pady=5)
        
        # Slider for length (8 to 32)
        self.length_slider = tk.Scale(root, from_=8, to=32, orient="horizontal")
        self.length_slider.set(12)  # Default length
        self.length_slider.pack()

        # Checkboxes for complexity
        self.use_digits = tk.BooleanVar(value=True)
        tk.Checkbutton(root, text="Include Numbers", variable=self.use_digits).pack()

        self.use_symbols = tk.BooleanVar(value=True)
        tk.Checkbutton(root, text="Include Symbols", variable=self.use_symbols).pack()

        # Output Field
        self.result_var = tk.StringVar()
        self.result_entry = tk.Entry(root, textvariable=self.result_var, font=("Courier", 12), width=25)
        self.result_entry.pack(pady=15)

        # Buttons
        tk.Button(root, text="Generate Password", command=self.update_password, bg="#4CAF50", fg="white").pack(pady=5)
        tk.Button(root, text="Copy to Clipboard", command=self.copy_to_clipboard).pack()

    def update_password(self):
        length = self.length_slider.get()
        digits = self.use_digits.get()
        symbols = self.use_symbols.get()
        
        password = generate_password(length, digits, symbols)
        self.result_var.set(password)

    def copy_to_clipboard(self):
        password = self.result_var.get()
        if password:
            self.root.clipboard_clear()
            self.root.clipboard_append(password)
            messagebox.showinfo("Success", "Password copied to clipboard!")
        else:
            messagebox.showwarning("Empty", "Generate a password first!")

if __name__ == "__main__":
    root = tk.Tk()
    app = PasswordApp(root)
    root.mainloop()
